<h3 style="display:inline-block;">함께할 친구를 찾습니다</h3>

<button type="button" class="btn" style="float:right; margin-top: 10px; background-color: rgba(136, 176, 75);"><a href="/article/new" style="color:white;">작성</a></button>

<hr>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">번호</th></th>
      <th scope="col">제목</th>
      <th scope="col">장소</th>
      <th scope="col">작성자</th>
      <th scope="col" colspan="3">관리</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
    <tr>
      <th scope="row"><%= article.id %></th>
      <td><%= article.title %></td>
      <td><%= article.place %></td>
      <td><%= article.user.email %></td>
      <td><%= link_to '보기', "/article/show/#{article.id}" %></td>
      <td><%= link_to '수정', "/article/edit/#{article.id}" %></td>
      <td><%= link_to '삭제', "/article/destroy/#{article.id}", data: { confirm: "삭제하시겠습니까?" } %></td>
    </tr>
    <% end %>
  </tbody>
</table>