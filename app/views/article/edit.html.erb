<h1>데이터 수정</h1>
<form action="/article/update/<%= @article.id %>" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <div class="form-group">
    <label for="title">제목</label>
    <input type="text" name="title" class="form-control" id="title" placeholder="제목을 입력해주세요"\
    value="<%= @article.title %>">
  </div>
  <div class="form-group">
    <label for="place">장소</label>
    <input type="text" name="place" class="form-control" id="place" placeholder="장소를 입력해주세요"\
    value="<%= @article.place %>">
  </div>
  <div class="form-group">
    <label for="content">내용</label>
    <input type="text" name="content" class="form-control" id="content" placeholder="내용을 입력해주세요"\
    value="<%= @article.content %>">
  </div>
  <div class="form-group">
    <label for="init_time">시작시간</label>
    <input type="datetime" name="init_time" class="form-control" id="init_time" placeholder="시작시간을 입력해주세요"\
    value="<%= @article.init_time %>">
    <label for="fin_time">종료시간</label>
    <input type="datetime" name="fin_time" class="form-control" id="fin_time" placeholder="시작시간을 입력해주세요"\
    value="<%= @article.fin_time %>">
  </div>
  
  <button type="submit" class="btn btn-primary">Submit</button>
</form>