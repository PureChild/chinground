<h3>나의 자유채팅방 현황</h3>

<%= button_to '만들기', "/freechats/new", class:"btn submit", :method => :get %>

<table class="table table-hover">
    <thead class="thead-light">
        <th scope="col" class="before">번호</th>
        <th scope="col" class="before">채팅방 이름</th>
        <th scope="col" class="before">채팅방의 게시물 이름</th>
        <th scope="col" class="before">보기</th>
    </thead>
    <tbody>
        <% @my_freechats.each do |chat| %>
            <tr>
                <td scope="row"><%= chat.id %></td>
                <td><%= chat.name %></td>
                <td><%= link_to '보기', "/freechats/show/#{chat.id}" %></td>
            </tr>
        <% end %>
    </tbody>
</table>